<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".view.RegistrationFragment">

    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:background="@drawable/rectangle_rounded"
            tools:layout_editor_absoluteY="38dp"
            tools:layout_editor_absoluteX="16dp">
    <TextView
            android:text="@string/app_name"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="26sp"
            android:textStyle="bold|italic"
            android:id="@+id/registrationLogo"/>
    <TextView
            android:text="@string/registration_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:id="@+id/registrationUser"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:textColor="#A7AEC4"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:id="@+id/registrationName"
            android:hint="@string/login"
            android:textColorHint="#A7AEC4"
            app:backgroundTint="#A7AEC4"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:hint="@string/login_password"
            android:textColorHint="#A7AEC4"
            android:ems="10"
            android:textColor="#A7AEC4"
            android:id="@+id/registrationPass"
            app:backgroundTint="#A7AEC4"/>
    <Button
            android:text="@string/registration_button"
            android:enabled="false"
            android:layout_marginTop="20sp"
            android:background="@drawable/button_rounded"
            android:layout_width="204dp"
            android:layout_height="wrap_content"
            android:id="@+id/registrationButton"/>
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>